@model ProfileIndexViewModel

<div class="container mt-5 profile-container">
    <div class="profile-header d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="@Model.ProfileImageUrl" alt="Profile Image" class="profile-image" />
            }
            else
            {
                <img src="https://via.placeholder.com/150" alt="Default Profile" class="profile-image" />
            }
            <h1 class="profile-username ms-3">@Model.Name</h1>
        </div>
        <button id="toggle-update" class="update-btn">Update Profile</button>
    </div>

    <div id="update-forms" class="collapse-section">
        <form asp-action="Update" method="post" class="mb-4">
            <label asp-for="Name">Username:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

            <button type="submit" class="btn btn-primary mt-2">Save</button>
        </form>

        <form asp-action="ProfileImage" method="post" enctype="multipart/form-data">
            <label>Upload profile picture:</label>
            <input asp-for="ProfileImageUrl" type="file" class="form-control mb-2" />
            <button type="submit" class="btn btn-secondary">Upload</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            const toggleBtn = document.getElementById('toggle-update');
            const updateForms = document.getElementById('update-forms');

            toggleBtn.addEventListener('click', function () {
                updateForms.classList.toggle('active');
            });
        </script>
            </section>
    }
</div>
